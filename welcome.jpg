<svg viewBox="0 0 800 400" xmlns="http://www.w3.org/2000/svg">
  <!-- Background with gradient -->
  <rect width="800" height="400" fill="url(#bgGradient)" rx="20" ry="20" />
  
  <!-- Gradient definitions -->
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" stop-color="#8E2DE2" />
      <stop offset="100%" stop-color="#4A00E0" />
    </linearGradient>
    <filter id="glow" x="-20%" y="-20%" width="140%" height="140%">
      <feGaussianBlur stdDeviation="10" result="blur" />
      <feComposite in="SourceGraphic" in2="blur" operator="over" />
    </filter>
  </defs>

  <!-- Music notes and decorations -->
  <g fill="white" opacity="0.1">
    <path d="M100,80 Q120,50 140,80 T180,80" stroke="white" stroke-width="3" fill="none" />
    <circle cx="180" cy="80" r="15" />
    
    <path d="M650,120 Q670,90 690,120 T730,120" stroke="white" stroke-width="3" fill="none" />
    <circle cx="730" cy="120" r="15" />
    
    <path d="M200,320 Q220,290 240,320 T280,320" stroke="white" stroke-width="3" fill="none" />
    <circle cx="280" cy="320" r="15" />
    
    <path d="M550,280 Q570,250 590,280 T630,280" stroke="white" stroke-width="3" fill="none" />
    <circle cx="630" cy="280" r="15" />
  </g>

  <!-- Main Text Content -->
  <g filter="url(#glow)">
    <text x="400" y="120" font-family="Arial, sans-serif" font-size="48" font-weight="bold" fill="white" text-anchor="middle">Welcome to Music Bot</text>
    <text x="400" y="180" font-family="Arial, sans-serif" font-size="28" font-weight="normal" fill="white" text-anchor="middle">Download Your Favorite Music</text>
  </g>
  
  <!-- Decorative Music Icon -->
  <g transform="translate(400, 260)">
    <circle cx="0" cy="0" r="70" fill="#ffffff" opacity="0.2" />
    <!-- Headphones icon -->
    <path d="M-40,-10 L-40,20 Q-40,30 -30,30 L-20,30 Q-10,30 -10,20 L-10,-5 M40,-10 L40,20 Q40,30 30,30 L20,30 Q10,30 10,20 L10,-5" 
          stroke="white" stroke-width="8" fill="none" stroke-linecap="round" />
    <path d="M0,-50 Q-50,-50 -50,0 M0,-50 Q50,-50 50,0" 
          stroke="white" stroke-width="8" fill="none" stroke-linecap="round" />
    <!-- Music note in the middle -->
    <path d="M-5,0 L-5,-30 L10,-25 L10,5 Q10,15 0,15 Q-10,15 -10,5 Q-10,-5 0,-5 Q5,-5 10,0" 
          fill="white" />
  </g>
  
  <!-- Bot creator credit -->
  <text x="400" y="370" font-family="Arial, sans-serif" font-size="16" fill="white" text-anchor="middle">Created by @zerocreations</text>
</svg>
